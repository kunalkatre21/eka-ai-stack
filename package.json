{
  "name": "enterprise-component-system",
  "version": "1.0.0",
  "description": "A scalable, component-based architecture for building enterprise websites using Tailwind Plus and vanilla JavaScript",
  "main": "components/ComponentLibrary.js",
  "type": "module",
  "scripts": {
    "dev": "live-server --port=3000 --open=./templates",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss assets/css/custom.css -o dist/assets/css/custom.min.css --env production",
    "build:js": "rollup components/ComponentLibrary.js -o dist/components/ComponentLibrary.min.js -f es",
    "lint": "eslint components/**/*.js assets/js/**/*.js --fix",
    "test": "jest",
    "docs": "jsdoc -c jsdoc.json -d docs/api",
    "deploy": "npm run build && gh-pages -d dist",
    "setup-fa": "node setup-fontawesome.js",
    "setup:fontawesome": "npm run setup-fa"
  },
  "keywords": [
    "components",
    "tailwind",
    "webflow",
    "enterprise",
    "javascript",
    "vanilla-js",
    "component-based",
    "frontend"
  ],
  "author": "Enterprise Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/enterprise-component-system.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/enterprise-component-system/issues"
  },
  "homepage": "https://your-org.github.io/enterprise-component-system",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "eslint": "^8.40.0",
    "gh-pages": "^5.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsdoc": "^4.0.2",
    "live-server": "^1.2.2",
    "postcss": "^8.4.24",
    "postcss-cli": "^10.1.0",
    "rollup": "^3.23.0",
    "tailwindcss": "^3.3.2"
  },
  "dependencies": {},
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not ie 11"
  ],
  "files": [
    "components/",
    "assets/",
    "templates/",
    "docs/",
    "tailwind.config.js"
  ],
  "exports": {
    ".": {
      "import": "./components/ComponentLibrary.js",
      "require": "./components/ComponentLibrary.js"
    },
    "./components/*": "./components/*/index.js",
    "./assets/*": "./assets/*"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/your-org"
  },
  "contributors": [
    {
      "name": "Enterprise Development Team",
      "email": "dev@yourcompany.com",
      "url": "https://yourcompany.com"
    }
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "volta": {
    "node": "18.16.0",
    "npm": "9.6.5"
  }
}
